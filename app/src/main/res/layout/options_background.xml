                    android:fontFamily="@font/aclonica"/>

                <TextView
                    android:layout_marginLeft="0dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pizza store"
                    android:fontFamily="@font/aclonica"/>

                <TextView
                    android:layout_marginLeft="220dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lodges"
                    android:fontFamily="@font/aclonica"/>

            </android.support.v7.widget.CardView>


        </LinearLayout>
        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="2.0dp"

            android:background="@android:color/black"></View>


        <android.support.v7.widget.CardView
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            app:cardBackgroundColor="@android:color/transparent">

            <LinearLayout
                android:background="@drawable/newviewedit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:fontFamily="@font/aclonica"
                    android:text="Entertainment"/>


            </LinearLayout>
        </android.support.v7.widget.CardView>


        <!--Fifth row-->

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:background="@drawable/optionitem"
                    android:id="@+id/B_mall"


                    android:layout_marginLeft="10dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_store_mall_directory_black_24dp" >



                </ImageButton>


                <ImageButton
                    android:layout_width="80dp"

                    android:id="@+id/B_cinema"
                    android:layout_height="80dp"
                    android:layout_marginLeft="28dp"
                    android:background="@drawable/optionitem"
                    android:src="@drawable/ic_movie_black_24dp" />

                <ImageButton
                    android:background="@drawable/optionitem"
                    android:id="@+id/B_gym"

                    android:layout_marginLeft="27dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_fitness_center_black_24dp"
                    />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_marginBottom="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="5dp"
                app:cardBackgroundColor="@color/transparentwhite">
                <TextView
                    android:layout_marginLeft="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mall"
                    android:fontFamily="@font/aclonica"/>

                <TextView
                    android:layout_marginLeft="0dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
