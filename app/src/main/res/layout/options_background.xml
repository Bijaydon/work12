                    android:fontFamily="@font/aclonica"/>

                <TextView
                    android:layout_marginLeft="0dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Swimming pool"
                    android:fontFamily="@font/aclonica"/>

                <TextView
