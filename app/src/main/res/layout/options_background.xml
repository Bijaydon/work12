            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            app:cardBackgroundColor="@android:color/transparent">

            <LinearLayout
                android:background="@drawable/newviewedit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:fontFamily="@font/aclonica"
                    android:text="Health Sector"/>


            </LinearLayout>
        </android.support.v7.widget.CardView>




        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardElevation="5dp">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

        <ImageButton
            android:background="@drawable/optionitem"
            android:id="@+id/B_hospitals"
            android:layout_marginLeft="10dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_local_hospital_black_24dp" >



        </ImageButton>

                

        <ImageButton
            android:background="@drawable/optionitem"
            android:id="@+id/B_pharmacies"

            android:layout_marginLeft="28dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_local_pharmacy_black_24dp"
            />

        <ImageButton
            android:background="@drawable/optionitem"
            android:id="@+id/B_ambulance"

            android:layout_marginLeft="27dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_airport_shuttle_black_24dp"
            />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

