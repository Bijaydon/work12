            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:background="@drawable/optionitem"
                    android:id="@+id/B_hotels"

                    android:layout_marginLeft="10dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_hotel_black_24dp" >



                </ImageButton>



                <ImageButton
                    android:background="@drawable/optionitem"
                    android:id="@+id/B_restaurants"

                    android:layout_marginLeft="28dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_restaurant_black_24dp"
                    />

                <ImageButton
                    android:background="@drawable/optionitem"
                    android:id="@+id/B_cafe"

                    android:layout_marginLeft="27dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_local_cafe_black_24dp"
                    />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="5dp"
                app:cardBackgroundColor="@color/transparentwhite">
